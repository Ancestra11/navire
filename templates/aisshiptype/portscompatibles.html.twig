{% extends 'base.html.twig' %}
{% block title %}Ports Compatibles{% endblock %}

{% block body %}
    <p><center>Ports compatibles</center></p>
    <p><center>Type de navire : {{ aisShipType.id }} {{ aisShipType.libelle }}</center></p>
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 100px;">Indicatif</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Pays</th>
                    <th scope="col">Voir</th>
                </tr>
            </thead>
            <tbody>
                {% for port in tousPort %}
                    <tr class="table-primary">
                        <td>{{ port.indicatif }}</td>
                        <td>{{ port.nom }}</td>
                        {# <td> <a href="{{  }}"> </a></td> #}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}